<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:width="match_parent"
    ohos:height="match_parent"
    ohos:rebound_effect="true"
    ohos:layout_alignment="horizontal_center">

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:orientation="vertical">
        <Text
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:text="Common Components"
            ohos:text_color="#708090"
            ohos:top_margin="15vp"
            ohos:left_margin="10vp"
            ohos:text_size="25fp"/>
        <Text
            ohos:background_element="#70dbdb"
            ohos:width="match_parent"
            ohos:height="3"/>
        <TableLayout
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:orientation="horizontal"
            ohos:top_margin="8vp"
            ohos:column_count="2">
            <Button
                ohos:id="$+id:tab_list"
                ohos:width="500"
                ohos:height="120"
                ohos:margin="5"
                ohos:padding="2"
                ohos:text="TabList and Tab"
                ohos:text_size="17fp"/>
            <Button
                ohos:id="$+id:list_container"
                ohos:width="500"
                ohos:height="120"
                ohos:margin="5"
                ohos:padding="2"
                ohos:text="ListContainer"
                ohos:text_size="17fp"/>
            <Button
                ohos:id="$+id:radio_container"
                ohos:width="500"
                ohos:height="120"
                ohos:margin="5"
                ohos:padding="2"
                ohos:text="RadioContainer"
                ohos:text_size="17fp"/>
            <Button
                ohos:id="$+id:checkbox"
                ohos:width="500"
                ohos:height="120"
                ohos:margin="5"
                ohos:padding="2"
                ohos:text="Checkbox"
                ohos:text_size="17fp"/>
            <Button
                ohos:id="$+id:date_picker"
                ohos:width="500"
                ohos:height="120"
                ohos:margin="5"
                ohos:padding="2"
                ohos:text="DatePicker"
                ohos:text_size="17fp"/>
        </TableLayout>
        <Text
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:text="Common layout"
            ohos:text_color="#708090"
            ohos:top_margin="15vp"
            ohos:left_margin="10vp"
            ohos:text_size="25fp"/>
        <Text
            ohos:background_element="#70dbdb"
            ohos:width="match_parent"
            ohos:height="3"/>

        <TableLayout
            ohos:width="1080"
            ohos:height="match_content"
            ohos:orientation="horizontal"
            ohos:top_margin="10"
            ohos:column_count="2">
            <Button
                ohos:id="$+id:directional_layout"
                ohos:width="500"
                ohos:height="120"
                ohos:margin="5"
                ohos:padding="2"
                ohos:text="DirectionalLayout"
                ohos:text_size="17fp"/>
            <Button
                ohos:id="$+id:dependent_layout"
                ohos:width="500"
                ohos:height="120"
                ohos:margin="5"
                ohos:padding="2"
                ohos:text="DependentLayout"
                ohos:text_size="17fp"/>
            <Button
                ohos:id="$+id:stack_layout"
                ohos:width="500"
                ohos:height="120"
                ohos:margin="5"
                ohos:padding="2"
                ohos:text="StackLayout"
                ohos:text_size="17fp"/>
            <Button
                ohos:id="$+id:table_layout"
                ohos:width="500"
                ohos:height="120"
                ohos:margin="5"
                ohos:padding="2"
                ohos:text="TableLayout"
                ohos:text_size="17fp"/>
        </TableLayout>
    </DirectionalLayout>
</ScrollView>